<main class="container mx-auto mt-28 px-5 flex">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
<div class="py-2 max-w-md">
    <div class="grid grid-cols-1 ">
        <span class="">Nom:</span>
        <%= f.text_field :first_name,  placeholder:"Konan ...",class:"ln-field" %>
    </div>
</div>
<div class=" max-w-md">
    <div class="grid grid-cols-1">
        <span class="">Prénom:</span>
        <%= f.text_field :last_name,  placeholder:"Ex: Angela ...", class:"ln-field" %>
    </div>
</div>

<div class="py-2 max-w-md">
    <div class="grid grid-cols-1 gap-2">
        <span class="">Ville:
        </span>
        <%= f.text_field :city_name, placeholder:"Ex: Abidjan", class:"ln-field" %>
    </div>
</div>
<div class="py-2 max-w-md">
    <div class="grid grid-cols-1">
        <span class="">Nom établissement:</span>
        <%= f.text_field :school_name, placeholder:"Ex: College Saint Michel Tiassalé", class:"ln-field" %>
    </div>
</div>
<div class="max-w-md">
    <div class="grid grid-cols-1">
        <span class="">N° matricule:</span>
        <%= f.text_field :matricule, placeholder:"Ex: 13235330y", class:"ln-field" %>
    </div>
</div>
<div class="py-2 max-w-md">
    <div class="grid grid-cols-1 gap-2">
        <span class="">Série:</span>
        <%#= f.select(:level_name, @levels.map{|level| [level.title]}, { prompt: "choisir" }, class:"ln-select border border-black") %>
    </div>
</div>
<div class="max-w-md">
    <div class="grid grid-cols-1">
        <span class="">N° whatsapp:</span>
        <%= f.phone_field :contact, placeholder:"Ex: 0584258085", class:"ln-field" %>
    </div>
</div>
<div class="py-2 max-w-md">
    <div class="grid grid-cols-1">
        <label class="block">
            <%= f.label :"Je suis :" , class:"" %>
            <br>
                <%= f.radio_button :gender, "Femme", id:"fenale", checked: true %>
                <label for="fenale" class="ln-radio pr-8">Une Femme</label>
                <%= f.radio_button :gender, "Homme",id:"male" %>
                <label for="male" class="ln-radio">Un Homme</span>
            </label>
        </div>
    </div>



  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

<div class="py-2 max-w-md">
    <div class="grid grid-cols-1 gap-6">
        <div class="block">
            <p class="">
                Vérifiez que vous avez bien remplir les champs avec les bonnes informations avant de cliquer sur
                <span class="font-semibold">Créer mon compte</span>.
            </p>
        </div>
    </div>
</div>
<%= f.hidden_field :user_role, value:"Student" %>

<div class="">
    <%= render "devise/shared/error_messages", resource: resource %>
</div>
<!-- Error-->
<%#= form_error_notification(resource: resource) %>


  <div class="actions pt-4">
    <%= f.submit "Sign up", class:"bg-blue-600 py-2 px-4 font-bold text-white" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</main>