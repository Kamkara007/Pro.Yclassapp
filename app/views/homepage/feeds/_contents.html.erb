<% cache do %>
    <% @feed_courses.each do |feed_course| %>
        <div class="card mt-2 bg-white ">
            <div class="border-x border p-2">
                <!-- Course title-->
                <div class="card-header">
                    <h1 class="font-semibold text-xl p-2">
                        <%#= link_to  "courses/#{feed_course.slug }" , class:"hover:text-blue-600 hover:underline" do %>
                        <%= link_to  "#", class:"hover:text-blue-600 hover:underline" do %>
                            <%= feed_course.title %>
                        <% end %>
                    </h1>
                </div>
                <!-- Course content-->
                <div class="card-body text-normal p-2">
                    <!-- Cached Course content-->
                    <% cache do %>
                        <!-- Embed in turbo_frame -->
                        <div id="feed_course_summary">
                            <div class="feed_course_summary_content">
                                <%= truncate(strip_tags(feed_course.content.to_s.html_safe), length: 200) %>
                                <span class="ln-feed-show">Voir plus</span>
                                <%= image_tag 'photo-1.jpg', class:"pt-2" %>
                                <div class="absolute flex justify-between transform -translate-y-1/2 left-0 right-0 top-1/2">
                                    <a href="#slide4" class="btn btn-circle">❮</a>
                                    <a href="#slide2" class="btn btn-circle">❯</a>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>

                <div id="feed_course_full" class="hidden_feed_full_content">
                    <%= feed_course.content.to_s.html_safe %>
                </div>
            </div>
            <!--Course Features -->
            <div class="flex justify-between ">
                <!-- Exercise Count -->
                <div class="flex ml-2 text-md font-semibold">
                    <%= link_to "", class:"flex" do %>
                        <p class="ml-4 py-2 flex">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="23px" height="23px" class="bg-white rounded-md px-1">
