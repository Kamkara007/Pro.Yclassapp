                    <% end %>
                </div>
                <!-- Whatsapp Sharing -->
                <!-- Exercise correction Count -->
                <div class="flex ml-2 text-md font-semibold">
                    <span class="mx-2 mr-4">Donner</span>
                </div>
            </div>
        </div>
    <% end %>
<% end %>
